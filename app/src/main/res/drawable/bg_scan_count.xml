<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:topRightRadius="4dp" android:bottomRightRadius="4dp"  />
            <solid android:color="@color/color_D9D9D9" /> <!-- Set your desired background color -->
            <padding android:bottom="2dp" android:top="2dp" android:right="2dp" android:left="2dp"/>
        </shape>
    </item>

    <!-- Top stroke -->
    <item >
        <shape android:shape="rectangle">
            <corners android:topRightRadius="4dp" android:bottomRightRadius="4dp"  />
            <solid android:color="@color/white" /> <!-- Transparent color -->

        </shape>
    </item>


</layer-list>
