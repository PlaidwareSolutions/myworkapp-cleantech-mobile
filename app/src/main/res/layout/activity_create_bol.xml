<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout" />

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/dataLyout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="start"
            android:orientation="vertical">

            <!-- Ship Date -->
            <TextView
                android:id="@+id/shipDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Order Number:"
                android:textAppearance="@style/inter_400_12_14" />

            <EditText
                android:id="@+id/orderNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/gray"
                android:background="@drawable/bg_edit_text"
                android:hint="ORD-2025-1-192E90"
                android:padding="@dimen/_10sdp"
                android:textAppearance="@style/inter_400_10_10" />

            <!-- Carrier -->
            <TextView
                android:id="@+id/carrierLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Bol Number:"
                android:textAppearance="@style/inter_400_12_14" />

            <EditText
                android:id="@+id/bolNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColorHint="@color/gray"
                android:background="@drawable/bg_edit_text"
                android:hint="BOL-2025-1-51E73D"
                android:padding="@dimen/_10sdp"
                android:textAppearance="@style/inter_400_10_10" />

            <!-- Driver Name -->
            <TextView
                android:id="@+id/driverNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shipment Number:"
                android:textAppearance="@style/inter_400_12_14" />

            <EditText
                android:id="@+id/shipmentNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_edit_text"
                android:hint="SHP-2025-1-192E90"
                android:textColorHint="@color/gray"
                android:padding="@dimen/_10sdp"
                android:textAppearance="@style/inter_400_10_10" />

            <!-- Driver License -->
            <TextView
                android:id="@+id/driverLicenseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Customer:"
                android:textAppearance="@style/inter_400_12_14" />

            <AutoCompleteTextView
                android:id="@+id/searchAutoCompleteCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:hint="John Smith"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textAppearance="@style/inter_400_12_16"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- License Plate -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Carrier:"
                android:textAppearance="@style/inter_400_12_14" />

            <AutoCompleteTextView
                android:id="@+id/searchAutoCompleteCarrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text"
                android:hint="John Smith"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:textColorHint="@color/gray"
                android:singleLine="true"
                android:textAppearance="@style/inter_400_12_16"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Dynamic Container -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/itemContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <!-- Add Item Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:background="@drawable/button_background"
        android:padding="@dimen/_8sdp"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@drawable/button_text_color" />

</RelativeLayout>

