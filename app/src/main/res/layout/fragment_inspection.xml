<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <ImageButton
                android:id="@+id/imageButtonBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:src="@drawable/back_24"
                android:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Inspection"
                android:textAppearance="@style/ToolbarTitle"
                android:textColor="@color/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginHorizontal="16dp"
                android:alpha="0.2"
                android:background="@color/placeholderTextColor" />

        </RelativeLayout>

    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginVertical="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/addInspection"
                android:background="@drawable/bg_filled_outlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    style="@style/inter_500_16_20"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center|start"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="12dp"
                    android:text="Add Inspection"
                    android:textColor="@color/color_121212" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/icon_arrow_forward" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:background="@color/placeholderTextColor" />

            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_filled_outlined"
                android:id="@+id/inspectionHistory"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="12dp"
                    android:gravity="center|start"
                    android:text="Inspection History"
                    android:textColor="@color/color_121212"
                    style="@style/inter_500_16_20"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/icon_arrow_forward" />

                <View
                    android:visibility="gone"
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:alpha="0.2"
                    android:background="@color/placeholderTextColor" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginVertical="@dimen/_12sdp"
                android:background="@drawable/button_background"
                android:enabled="true"
                android:padding="@dimen/_8sdp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
