<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="layout/fragment_inventory_items_0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnrItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:background="@drawable/bg_filled_outlined"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/customerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:letterSpacing="-0.02"
                            android:singleLine="true"
                            tools:text="T: Cleantech"
                            android:textAppearance="@style/inter_400_10_10"
                            android:textColor="@color/color_0F0F0F" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:letterSpacing="-0.02"
                        android:singleLine="true"
                        tools:text="LIC# RKA 5876"
                        android:textAppearance="@style/inter_400_10_10"
                        android:textColor="@color/color_0F0F0F" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/carrierName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:letterSpacing="-0.02"
                            android:singleLine="true"
                            tools:text="F: Professor -Industries"
                            android:textAppearance="@style/inter_400_10_10"
                            android:textColor="@color/color_0F0F0F" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/orderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:letterSpacing="-0.02"
                        android:singleLine="true"
                        tools:text="DT:12/21/2024 12:45 PM"
                        android:textAppearance="@style/inter_400_10_10"
                        android:textColor="@color/color_0F0F0F" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bt_clear"
                    android:layout_width="@dimen/_36sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@drawable/bg_filled_outlined"
                    android:backgroundTint="@color/color_ff0000"
                    android:importantForAccessibility="no"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_delete" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_order_details"
                        android:backgroundTint="@color/color_EFF0F4"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical|center"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:text="@string/scan_count"
                        android:textAppearance="@style/inter_400_12_16"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-4dp"
                        android:background="@drawable/bg_scan_count"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:gravity="center_vertical|center"
                        android:paddingHorizontal="@dimen/_12sdp"
                        android:textAppearance="@style/inter_400_12_16"
                        android:textColor="@color/black"
                        android:text="0"
                        tools:text="50" />
                </LinearLayout>


                <TextView
                    android:visibility="gone"
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/black"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center_vertical|center"
                    android:letterSpacing="-0.02"
                    android:text="@string/save_items"
                    android:textAppearance="@style/inter_400_12_16"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/checkStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:backgroundTint="@color/black"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center_vertical|center"
                    android:letterSpacing="-0.02"
                    android:text="Check Status"
                    android:textAppearance="@style/inter_400_12_16"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_24sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:letterSpacing="-0.02"
                    android:singleLine="true"
                    android:text="Please remove non-shippable items"
                    android:textAppearance="@style/inter_400_10_10"
                    android:textColor="@color/color_ff0000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ListView
                        android:id="@+id/LvTags"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_24sdp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="@dimen/_8sdp"
                        android:scrollbars="none"
                        android:visibility="visible"
                        tools:listitem="@layout/list_tag_item" />


                    <LinearLayout
                        android:id="@+id/imgScan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:importantForAccessibility="no"
                            android:src="@drawable/ic_scan" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:layout_marginBottom="5dp"
                android:baselineAligned="false"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_24sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_start"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/button_background"
                        android:backgroundTint="@color/color_388E3C"
                        android:letterSpacing="-0.02"
                        android:text="@string/scan"
                        android:textAllCaps="true"
                        android:textAppearance="@style/inter_700_14_12"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/app_color"
            android:visibility="gone" />

    </RelativeLayout>

</FrameLayout>
