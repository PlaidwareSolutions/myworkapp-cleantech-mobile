<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_border">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:layout_weight="1"
            android:text="11111111111"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_divider_width"
        android:background="@color/divider_color" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/carrierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:layout_weight="1"
            android:text="@string/order"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_divider_width"
        android:background="@color/divider_color" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:id="@+id/reqBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:layout_weight="1"
            android:text="@string/order"
            android:textSize="@dimen/table_field_text_size" />

        <View
            android:layout_width="@dimen/table_divider_width"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <TextView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/padding_inside_table_field"
            android:layout_marginStart="@dimen/padding_inside_table_field"
            android:text="@string/order"
            android:textAllCaps="true"
            android:textSize="@dimen/table_field_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>