<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RFIDApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/dApp_color</item>
        <item name="colorPrimaryVariant">@color/dApp_color</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">@font/kaiseiopti_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
        <item name="fontWeight">700</item>
    </style>

    <style name="BottomSheetDialogTheme">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

</resources>